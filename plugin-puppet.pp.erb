<%- 

require 'nokogiri' 

def word_wrap(text, line_width = 70 ) 
  return text if line_width <= 0
  text.gsub(/\n/, ' ').gsub(/(.{1,#{line_width}})(\s+|$)/, "\\1\n").strip
end

def wrap_and_prepend(text, line_width=70)
  holder=''
  text1 = word_wrap(text, line_width)
  text2 = text1.split("\n")
  text3 = text2.map{ |word| "#   #{word}" }
  text3.each do |line|
    line = line.strip
    holder+=line+"\n"
  end
  return holder
end

