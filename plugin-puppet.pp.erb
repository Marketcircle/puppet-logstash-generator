  file { "${logstash::params::configdir}/<%=section%>_<% if section=='filter' %>${order}_<%- end%><%=name%>_${name}":
    ensure  => present,
    content => "<%= section %> {\n <%=name%> {\n<%-
sorted_attributes.each do |name, config|
